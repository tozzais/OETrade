<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingTop="10dp"
    android:paddingEnd="15dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_buy_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1"
        android:textColor="@color/black_title_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_buy_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:text="111"
        android:textColor="@color/black_title_color"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:text="111"
            android:textColor="@color/black_title_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sell_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:textColor="@color/black_title_color"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_sell_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="111"
        android:textColor="@color/black_title_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_sell_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10sp"
        android:layout_toLeftOf="@id/tv_sell_no"
        android:text="333"
        android:textColor="@color/black_title_color"
        android:textSize="14sp" />
</RelativeLayout>