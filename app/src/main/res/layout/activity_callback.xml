<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="5dp">


        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_gray5"
            android:hint="Please enter feedback"
            android:textSize="12sp"
            android:textColor="@color/black_title_color"
            android:gravity="top"
            android:padding="12dp"/>



    </LinearLayout>

    <LinearLayout
        style="@style/base_hor_style_input"
        android:layout_marginTop="5dp"
        >

        <EditText
            android:id="@+id/et_contact_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Please enter your mobile phone number or email (optional)"
            android:inputType="text"
            android:maxLength="16"
            android:textSize="12sp"
            android:textColor="@color/black_title_color"
            android:gravity="top"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>



    </LinearLayout>



    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_commit"
            style="@style/base_btn_style_large"
            android:text="confirm"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>







</LinearLayout>